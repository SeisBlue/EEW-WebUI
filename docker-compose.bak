version: '3.8'
services:
  redis:
    image: redis:7-alpine
    container_name: redis
    ports:
      - "6379:6379"
    command: ["redis-server", "--save", "", "--appendonly", "no"]
  reader:
    build:
      context: .
      dockerfile: docker/Dockerfile
    image: seisblue/eew
    container_name: reader
    command: ["python", "reader_pyew.py"]
    depends_on:
      - redis
  dispatcher:
    build:
      context: .
      dockerfile: docker/Dockerfile
    image: seisblue/eew
    container_name: dispatcher
    command: ["uvicorn", "dispatcher:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
    ports:
      - "8000:8000"
    depends_on:
      - redis